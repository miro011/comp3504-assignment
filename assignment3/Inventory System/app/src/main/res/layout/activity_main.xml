<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_top_bar"
        android:layout_width="421dp"
        android:layout_height="54dp"
        android:layout_marginStart="-5dp"
        android:contentDescription="@string/top_bar"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg02"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/main_bottom_bar"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="421dp"
        android:layout_height="54dp"
        android:layout_marginTop="274dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="-3dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_top_bar"
        app:layout_constraintVertical_bias="0.994"
        app:srcCompat="@drawable/bg02"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="@string/app_name"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/main_bottom_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_top_bar"
        app:layout_constraintVertical_bias="0.064" />

    <ImageButton
        android:id="@+id/main_add_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="75dp"
        android:backgroundTint="#FFFFF1"
        android:contentDescription="@string/add_desc"
        app:layout_constraintEnd_toStartOf="@+id/main_list_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_title"
        app:srcCompat="@mipmap/add_item_round"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/main_textview_addItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="7dp"
        android:fontFamily="cursive"
        android:text="@string/addItem_title"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_add_item" />

    <ImageButton
        android:id="@+id/main_list_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="#FFFFF1"
        android:contentDescription="@string/list_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_title"
        app:srcCompat="@mipmap/list_item"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/main_textview_listItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="86dp"
        android:fontFamily="cursive"
        android:text="@string/listItem_title"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_list_item" />

    <ImageButton
        android:id="@+id/main_search_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#FFFFF1"
        android:contentDescription="@string/search_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_textview_addItem"
        app:srcCompat="@mipmap/search_item"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/main_textview_searchItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="96dp"
        android:fontFamily="cursive"
        android:text="@string/searchItem_title"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/main_textview_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_search_item" />

    <ImageButton
        android:id="@+id/main_Info"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="#FFFFF1"
        android:contentDescription="@string/info_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/main_search_item"
        app:layout_constraintTop_toBottomOf="@id/main_textview_listItem"
        app:srcCompat="@mipmap/info"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/main_textview_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="90dp"
        android:fontFamily="cursive"
        android:text="@string/info_title"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_Info" />

    <ImageButton
        android:id="@+id/main_exit_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/exit_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_delete"
        tools:ignore="ImageContrastCheck" />



    <ImageButton
        android:id="@+id/nav_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-3dp"
        android:contentDescription="@string/nav_desc"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nav_icon" />



</androidx.constraintlayout.widget.ConstraintLayout>