<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textview_itemID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/addItem_title_itemId"
                android:textColorHint="#616161">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addItem_textbox_itemID"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/addItem_hint_itemId"
                    android:inputType="number"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textview_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/addItem_title_quantity"
                android:textColorHint="#616161">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addItem_textbox_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/addItem_hint_quantity"
                    android:inputType="number"
                    android:textColorHint="#000000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textview_itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/addItem_title_name"
                android:textSize="20sp"
                android:textColorHint="#616161">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addItem_textbox_itemName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/addItem_hint_name"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textview_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/addItem_title_price"
                android:textColorHint="#616161">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addItem_textbox_price"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/addItem_hint_price"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textview_supplierID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/addItem_title_supplierID"
                android:textColorHint="#616161">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addItem_textbox_supplierID"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/addItem_hint_supplierID"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addItem_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/addItem_submit_button"/>
        </LinearLayout>
    </ScrollView>


    <ImageView
        android:id="@+id/addItem_bottom_bar"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bg02"
        tools:ignore="ImageContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>