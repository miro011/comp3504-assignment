<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItemActivity">

    <TextView
        android:id="@+id/textview_itemID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="161dp"
        android:text="@string/addItem_title_itemId"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addItem_textbox_itemID"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="152dp"
        android:autofillHints="@string/addItem_autoHints_itemId"
        android:ems="10"
        android:hint="@string/addItem_hint_itemId"
        android:inputType="number"
        android:textColorHint="#757575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textview_itemID"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="30dp"
        android:text="@string/addItem_title_name"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_itemID" />

    <EditText
        android:id="@+id/addItem_textbox_itemName"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:autofillHints="@string/addItem_autoHints_name"
        android:ems="10"
        android:hint="@string/addItem_hint_name"
        android:inputType="textPersonName"
        android:textColorHint="#757575"
        app:layout_constraintStart_toEndOf="@+id/textview_itemName"
        app:layout_constraintTop_toBottomOf="@+id/addItem_textbox_itemID" />

    <TextView
        android:id="@+id/textview_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="27dp"
        android:text="@string/addItem_title_quantity"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_itemName" />

    <EditText
        android:id="@+id/addItem_textbox_quantity"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:autofillHints="@string/addItem_autoHints_quantity"
        android:ems="10"
        android:hint="@string/addItem_hint_quantity"
        android:inputType="number"
        android:textColorHint="#757575"
        app:layout_constraintStart_toEndOf="@+id/textview_quantity"
        app:layout_constraintTop_toBottomOf="@+id/addItem_textbox_itemName" />

    <TextView
        android:id="@+id/textview_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="27dp"
        android:text="@string/addItem_title_price"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_quantity" />

    <EditText
        android:id="@+id/addItem_textbox_price"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:autofillHints="@string/addItem_autoHints_price"
        android:ems="10"
        android:hint="@string/addItem_hint_price"
        android:inputType="numberDecimal"
        android:textColorHint="#757575"
        app:layout_constraintStart_toEndOf="@+id/textview_price"
        app:layout_constraintTop_toBottomOf="@+id/addItem_textbox_quantity" />

    <TextView
        android:id="@+id/textview_supplierID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="30dp"
        android:text="@string/addItem_title_supplierID"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_price" />


    <EditText
        android:id="@+id/addItem_textbox_supplierID"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:autofillHints="@string/addItem_autoHints_supplierID"
        android:ems="10"
        android:hint="@string/addItem_hint_supplierID"
        android:inputType="number"
        android:textColorHint="#757575"
        app:layout_constraintStart_toEndOf="@+id/textview_supplierID"
        app:layout_constraintTop_toBottomOf="@+id/addItem_textbox_price" />

    <Button
        android:id="@+id/addItem_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#A1A1A1"
        android:clickable="true"
        android:text="@string/addItem_submit_button"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addItem_textbox_supplierID" />

    <ImageView
        android:id="@+id/addItem_bottom_bar"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bg02"
        tools:ignore="ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>