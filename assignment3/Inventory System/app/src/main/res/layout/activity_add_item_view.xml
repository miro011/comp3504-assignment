<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItemView">


    <ImageButton
        android:id="@+id/addItem_top_bar"
        android:layout_width="421dp"
        android:layout_height="54dp"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="-7dp"
        android:backgroundTint="#848384"
        android:contentDescription="@string/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/title_bar"
        app:tint="#838283"
        tools:ignore="ImageContrastCheck" />


    <TextView
        android:id="@+id/addItem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="648dp"
        android:fontFamily="cursive"
        android:text="@string/app_name"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/addItem_bottom_bar"
        tools:layout_editor_absoluteX="72dp" />

    <ImageButton
        android:id="@+id/addItem_button_exit"
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="-6dp"
        android:backgroundTint="#838283"
        android:contentDescription="@string/exit_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_delete"
        tools:ignore="ImageContrastCheck" />

    <ImageButton
        android:id="@+id/addItem_bottom_bar"
        android:layout_width="421dp"
        android:layout_height="54dp"
        android:layout_marginStart="-6dp"
        android:layout_marginBottom="-6dp"
        android:backgroundTint="#848384"
        android:contentDescription="@string/top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/title_bar"
        app:tint="#838283"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/textview_supplierID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addItem_title_supplierID"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="372dp" />

    <TextView
        android:id="@+id/textview_itemID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addItem_title_itemId"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="220dp" />

    <TextView
        android:id="@+id/textview_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addItem_title_price"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="334dp" />

    <TextView
        android:id="@+id/addItem_Title"
        android:layout_width="84dp"
        android:layout_height="31dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="61dp"
        android:fontFamily="cursive"
        android:text="@string/addItem_title"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/addItem_textbox_itemID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addItem_top_bar"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textview_itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addItem_title_name"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="258dp" />

    <TextView
        android:id="@+id/textview_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addItem_title_quantity"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="296dp" />

    <Button
        android:id="@+id/addItem_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="180dp"
        android:backgroundTint="#838283"
        android:text="@string/addItem_submit_button"
        app:layout_constraintBottom_toTopOf="@id/addItem_bottom_bar"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/addItem_textbox_quantity"
        android:layout_width="210dp"
        android:layout_height="29dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/addItem_textbox_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textview_quantity" />

    <EditText
        android:id="@+id/addItem_textbox_price"
        android:layout_width="210dp"
        android:layout_height="29dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/addItem_textbox_supplierID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textview_price" />

    <EditText
        android:id="@+id/addItem_textbox_supplierID"
        android:layout_width="210dp"
        android:layout_height="29dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="54dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/addItem_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textview_supplierID" />

    <EditText
        android:id="@+id/addItem_textbox_itemID"
        android:layout_width="210dp"
        android:layout_height="29dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/addItem_textbox_itemName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textview_itemID" />

    <EditText
        android:id="@+id/addItem_textbox_itemName"
        android:layout_width="210dp"
        android:layout_height="29dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/addItem_textbox_quantity"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>